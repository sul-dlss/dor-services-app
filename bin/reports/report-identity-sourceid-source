#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative '../../config/environment'
require_relative '../../lib/report'

def check(ng_xml)
  ng_xml.root.xpath('//sourceId/@source').map(&:content).join(', ').presence
end

Report.new(name: 'identity-sourceid-source-attr', dsid: 'identityMetadata', report_func: method(:check)).run
