#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative '../../config/environment'
require_relative '../../lib/report'

def check(ng_xml)
  ng_xml.root.xpath('//identityMetadata/sourceId[@source="dissertation"]').map(&:content).join(', ').presence
end

Report.new(name: 'identity-sourceid-dissertation', dsid: 'identityMetadata', report_func: method(:check)).run
