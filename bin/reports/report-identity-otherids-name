#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative '../../config/environment'
require_relative '../../lib/report'

def check(ng_xml)
  ng_xml.root.xpath('//otherId/@name').map(&:content).join(', ').presence
end

Report.new(name: 'identity-otherids-name-attr', dsid: 'identityMetadata', report_func: method(:check)).run
